                    <h2>Episode List</h2>
                    <!-- //== -->
                    <div class="title-hd-sm">
                      <h4>Latest Updates</h4>
                    </div>
                    <div class="mvcast-item">
                      <% var i=0; var lastep = ''
                      ;episodeList.forEach(function(item){ i++; lastep =
