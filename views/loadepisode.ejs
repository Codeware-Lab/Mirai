                        <div class="cast-it">
                          <div class="cast-left">
                            <a class="fetchVedio" href="#"
                              ><span style="color: #dcf836"
                                ><%= item.name %></span
                              ><span style="color: #dd003f"
                                ><% var x = item.value.split(':'); %><%= x['1'];
                                %></span
